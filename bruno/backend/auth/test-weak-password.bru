meta {
  name: Test Weak Password
  type: http
  seq: 5
}

post {
  url: {{backend_url}}{{api_prefix}}/auth/register
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "test@example.com",
    "password": "weak"
  }
}

tests {
  test("Status code is 400", function() {
    expect(res.getStatus()).to.equal(400);
  });

  test("Response has validation error", function() {
    expect(res.getBody()).to.have.property('error');
    expect(res.getBody()).to.have.property('details');
  });

  test("Password validation failed", function() {
    const details = res.getBody().details;
    expect(details).to.be.an('array');
    expect(details.length).to.be.greaterThan(0);
  });
}

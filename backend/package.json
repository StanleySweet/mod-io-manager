{
  "name": "modio-manager-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Secure mod.io management backend with Fastify",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=development node dist/index.js",
    "migrate:latest": "tsx src/config/knexfile.ts && knex --knexfile src/config/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/config/knexfile.ts migrate:rollback",
    "migrate:make": "knex --knexfile src/config/knexfile.ts migrate:make"
  },
  "keywords": [
    "fastify",
    "mod.io",
    "typescript",
    "security"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "argon2": "^0.31.2",
    "better-sqlite3": "^11.4.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.2",
    "jose": "^5.2.0",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
